<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryColorDark</item>
    </style>

    <!-- Supported values for fontFamily are:
        "sans-serif" for regular Roboto
        "sans-serif-light" for Roboto Light
        "sans-serif-condensed" for Roboto Condensed
     based on: http://developer.android.com/intl/es/about/versions/android-4.1.html -->

    <style name="Font"/>

    <!-- Roboto Regular -->
    <style name="Font.Roboto">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Font.Roboto.Regular">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Roboto.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Font.Roboto.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Roboto.Bold.Italic">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!-- Roboto Light -->
    <style name="Font.Roboto.Light">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Roboto.Light.Italic">
        <item name="android:textStyle">italic</item>
    </style>


    <!-- Roboto Thin -->
    <style name="Font.Roboto.Thin">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Roboto.Thin.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Roboto Condensed -->
    <style name="Font.Roboto.Condensed">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Font.Roboto.Condensed.Regular">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Roboto.Condensed.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Font.Roboto.Condensed.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Roboto.Condensed.Bold.Italic">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!-- Roboto Medium -->
    <style name="Font.Roboto.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Font.Roboto.Medium.Italic">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Font.Roboto.Medium.Black">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">italic</item>
    </style>



    <!-- Styles with Size-->
    <style name="Font.Roboto.Regular.14">
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="Font.Roboto.Medium.14">
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>



    <!-- Styles with Color-->
    <style name="Font.Roboto.Regular.14.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font.Roboto.Regular.14.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Font.Roboto.Medium.14.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font.Roboto.Medium.14.Black">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
